# Токен Telegram бота
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ID канала для отправки цитат (с символом @ для публичных каналов или -100... для приватных)
TELEGRAM_CHANNEL_ID=@your_channel_id

# Ключ API MyMemory для перевода (опционально)
MYMEMORY_EMAIL=your_email@example.com

# Настройки GigaChat API для генерации изображений
GIGACHAT_API_URL=https://gigachat.devices.sberbank.ru/api/v1
GIGACHAT_TOKEN=your_gigachat_token
ENABLE_IMAGE_GENERATION=true

# Настройки часового пояса
TIMEZONE=Europe/Moscow

# Расписание отправки цитат в формате JSON
# Формат: {"день_недели": ["время1", "время2", ...]}
# Дни недели: monday, tuesday, wednesday, thursday, friday, saturday, sunday
SCHEDULE={"monday":["09:00","12:00","15:00","18:00","21:00"],"tuesday":["09:00","12:00","15:00","18:00","21:00"],"wednesday":["09:00","12:00","15:00","18:00","21:00"],"thursday":["09:00","12:00","15:00","18:00","21:00"],"friday":["09:00","12:00","15:00","18:00","21:00"],"saturday":["12:00","18:00"],"sunday":["12:00","18:00"]} 